@model CASEPro.Models.PROYECTO

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>PROYECTO</legend>

    <div class="display-label">NOMBRE</div>
    <div class="display-field">@Model.NOMBRE</div>

    <div class="display-label">OBJETIVOPRIMARIO</div>
    <div class="display-field">@Model.OBJETIVOPRIMARIO</div>

    <div class="display-label">ALCANCE</div>
    <div class="display-field">@Model.ALCANCE</div>

    <div class="display-label">PRIORIDAD</div>
    <div class="display-field">@String.Format("{0:F}", Model.PRIORIDAD)</div>

    <div class="display-label">FASE</div>
    <div class="display-field">@String.Format("{0:F}", Model.FASE)</div>

    <div class="display-label">VERSION</div>
    <div class="display-field">@Model.VERSION</div>

    <div class="display-label">INTEGRANTES</div>
    <div class="display-field">@(Model.INTEGRANTES == null ? "None" : Model.INTEGRANTES.Count.ToString())</div>

    <div class="display-label">PROYECTO_DETALLES</div>
    <div class="display-field">@(Model.PROYECTO_DETALLES == null ? "None" : Model.PROYECTO_DETALLES.Count.ToString())</div>

    <div class="display-label">REQUERIMIENTOS</div>
    <div class="display-field">@(Model.REQUERIMIENTOS == null ? "None" : Model.REQUERIMIENTOS.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


